{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": [ "./node_modules/@types" ],
    "types": [
      "node",
      "mocha",
      "expect"
    ],
    "lib": [
      "es2015"
    ],
    "outDir": "build"
  },

  "include": [
    "server/**/*.ts"
  ]
}
